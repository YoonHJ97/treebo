<?xml version="1.0"?>
    <robot name="treebo" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <!-- Materials -->
    <material name="white"><color rgba="1 1 1 1"/></material>
    <material name="orange"><color rgba="1 0.3 0.1 1"/></material>
    <material name="blue"><color rgba="0.2 0.2 1 1"/></material>
    <material name="black"><color rgba="0 0 0 1"/></material>

    <!-- BASE LINK -->
    <link name="base_link"/>

    <!-- CHASSIS -->
    <link name="chassis">
        <visual>
            <origin xyz="0.1 0 0.075"/>
            <geometry><box size="0.4 0.3 0.1"/></geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.1 0 0.075"/>
            <geometry><box size="0.4 0.3 0.1"/></geometry>
        </collision>
        <xacro:inertial_box mass="0.4" x="0.4" y="0.3" z="0.1">
        <origin xyz="0.1 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0"/>
    </joint>


    <!-- FRONT LEFT -->
    <link name="front_left_wheel">
        <visual>
            <geometry><cylinder radius="0.05" length="0.04"/></geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry><cylinder radius="0.05" length="0.04"/></geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_left_wheel"/>
        <origin xyz="0.12 0.175 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- FRONT RIGHT -->
    <link name="front_right_wheel">
        <visual>
            <geometry><cylinder radius="0.05" length="0.04"/></geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry><cylinder radius="0.05" length="0.04"/></geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_right_wheel"/>
        <origin xyz="0.12 -0.175 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <!-- REAR LEFT -->
    <link name="rear_left_wheel">
        <visual>
            <geometry><cylinder radius="0.05" length="0.04"/></geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry><cylinder radius="0.05" length="0.04"/></geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <joint name="rear_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_left_wheel"/>
        <origin xyz="-0.12 0.175 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <!-- REAR RIGHT -->
    <link name="rear_right_wheel">
        <visual>
            <geometry><cylinder radius="0.05" length="0.04"/></geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry><cylinder radius="0.05" length="0.04"/></geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <joint name="rear_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_right_wheel"/>
        <origin xyz="-0.12 -0.175 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="lidar_mount">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <material name="black">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.05"/>
            <!-- 대략적인 관성치 m*r^2/2, m*(3r^2+h^2)/12 등 근사 -->
            <inertia ixx="3.0e-05" ixy="0" ixz="0" iyy="3.0e-05" iyz="0" izz="3.0e-05"/>
        </inertial>
    </link>

    <!-- 마운트를 섀시에 고정 -->
    <joint name="lidar_mount_fixed_joint" type="fixed">
        <parent link="chassis"/>
        <child link="lidar_mount"/>
        <!-- 섀시 위쪽 중앙에 배치. 필요시 xyz 조정 -->
        <origin xyz="0.0 0.0 0.09" rpy="0 0 0"/>
    </joint>

    <!-- 레이저 링크 라이다 본체를 단순 실린더로 표현 -->
    <link name="laser_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
            <!-- 지름 약 6cm, 높이 6cm 정도의 라이다로 가정 -->
                <cylinder radius="0.03" length="0.06"/>
            </geometry>
            <material name="blue">
                <color rgba="0.2 0.2 1 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.03" length="0.06"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="0.2"/>
            <inertia ixx="1.2e-04" ixy="0" ixz="0" iyy="1.2e-04" iyz="0" izz="1.6e-04"/>
        </inertial>
    </link>

    <!-- 레이저를 마운트 위에 고정 -->
    <joint name="laser_link_fixed_joint" type="fixed">
    <parent link="lidar_mount"/>
    <child link="laser_link"/>
    <origin xyz="0.0 0.0 0.05" rpy="0 0 0"/>
    </joint>

</robot>
