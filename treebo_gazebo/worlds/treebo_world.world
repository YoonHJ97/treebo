<?xml version="1.0" ?>
<sdf version="1.8">
  <world name="treebo_world">
    <physics name="1ms" type="ignored">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1.0</real_time_factor>
    </physics>

    <plugin filename="gz-sim-physics-system" name="gz::sim::systems::Physics"/>
    <plugin filename="gz-sim-sensors-system" name="gz::sim::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
    <plugin filename="gz-sim-user-commands-system" name="gz::sim::systems::UserCommands"/>
    <plugin filename="gz-sim-scene-broadcaster-system" name="gz::sim::systems::SceneBroadcaster"/>
    <plugin filename="gz-sim-imu-system" name="gz::sim::systems::Imu"/>

    <!-- 바닥 -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- 조명 -->
    <light type="directional" name="sun">
      <cast_shadows>false</cast_shadows>
      <pose>0 0 2 0 0 0</pose>
      <diffuse>1 1 1 1</diffuse>
      <specular>1 1 1 1</specular>
      <attenuation>
        <range>1000</range>
        <constant>1</constant>
        <linear>0</linear>
        <quadratic>0</quadratic>
      </attenuation>
      <direction>0 0 -1</direction>
    </light>

    <!-- 벽 4면 (순수 box만 사용) -->
    <model name="wall_front">
      <static>true</static>
      <pose>0 1.5 0.11 0 0 0</pose>
      <link name="link">
        <visual name="v">
          <geometry><box><size>4 0.01 0.44</size></box></geometry>
        </visual>
        <collision name="c">
          <geometry><box><size>4 0.01 0.44</size></box></geometry>
        </collision>
      </link>
    </model>

    <model name="wall_back">
      <static>true</static>
      <pose>0 -1.5 0.11 0 0 3.14</pose>
      <link name="link">
        <visual name="v">
          <geometry><box><size>4 0.01 0.44</size></box></geometry>
        </visual>
        <collision name="c">
          <geometry><box><size>4 0.01 0.44</size></box></geometry>
        </collision>
      </link>
    </model>

    <model name="wall_left">
      <static>true</static>
      <pose>-2 0 0.11 0 0 1.57</pose>
      <link name="link">
        <visual name="v">
          <geometry><box><size>3 0.01 0.44</size></box></geometry>
        </visual>
        <collision name="c">
          <geometry><box><size>3 0.01 0.44</size></box></geometry>
        </collision>
      </link>
    </model>

    <model name="wall_right">
      <static>true</static>
      <pose>2 0 0.11 0 0 -1.57</pose>
      <link name="link">
        <visual name="v">
          <geometry><box><size>3 0.01 0.44</size></box></geometry>
        </visual>
        <collision name="c">
          <geometry><box><size>3 0.01 0.44</size></box></geometry>
        </collision>
      </link>
    </model>
  </world>
</sdf>
